<odoo>
  <data>
    <!-- explicit list view definition -->
 
   <record model="ir.ui.view" id="rea_management.inherit_sale_search_view">
      <field name="name">sake search affectations inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale_renting.rental_order_view_search" />
      <field name="arch" type="xml">
       
        <xpath expr="//searchpanel" position="replace">
        
              <searchpanel>
              <field name="x_rental_status" icon="fa-retweet"/>
              
          </searchpanel>
         
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="rea_management.inherit_sale_view">
      <field name="name">sake view affectations inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
       
        <xpath expr="//button[@name='preview_sale_order']" position="replace">
        
              <button name="preview_sale_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Apercue</span>
                                <span class="o_stat_text">Patient</span>
                            </div>
                        </button>
         
        </xpath>
        <xpath expr="//field[@name='state']" position="replace">
        <field name="x_rental_status" widget="statusbar" statusbar_visible="draft,pickup,return"/>
              <field name="state" invisible="1" widget="statusbar" statusbar_visible="draft,sent,sale"/>
         
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="replace">
        <field name="partner_id" string="Patient" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" options="{&quot;always_reload&quot;: True}"/>
         
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="rea_management.inherit_res_company_view">
      <field name="name">res_company inherit</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
       
        <xpath expr="//div[@class='o_address_format']" position="replace">
        
             <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>

                                        

                                        <field name="state_id" class="o_address_state" string="Region" placeholder="Region" options="{&quot;no_open&quot;: True}"/>
          
                                        <field name="country_id" placeholder="Country" class="o_address_state" options="{&quot;no_open&quot;: True}"/>
                                    </div>
         
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="rea_management.inherit_product_form">
      <field name="name">product form inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="sale_renting.product_template_form_view_rental" />
      <field name="arch" type="xml">
       
        <xpath expr="//field[@name='extra_daily']" position="after">
        
              <field name="today_state" />
         <field name="next_free_dtae" />
        </xpath>
      </field>
    </record>
    <record model="ir.ui.view" id="rea_management.inherit_sale_rproduct_kanban">
      <field name="name">product saler kanban inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="sale_renting.product_template_rental_kanban_view" />
      <field name="arch" type="xml">
      <xpath expr="//field[@name='lst_price']" position="replace">
      </xpath>
      <xpath expr="//field[@name='display_price']" position="replace">
      </xpath>
      </field>
      </record>
    <record model="ir.ui.view" id="rea_management.inherit_product_kanban">
      <field name="name">product kanban inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_kanban_view" />
      <field name="arch" type="xml">
       
        <xpath expr="//div[@class='oe_kanban_global_click']" position="replace">
        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <small t-if="record.default_code.value">[<field name="default_code"/>]</small>
                                </strong>
                                <div t-if="record.product_variant_count.value &gt; 1" groups="product.group_product_variant">
                                    <strong>
                                        <t t-esc="record.product_variant_count.value"/> Variants
                                    </strong>
                                </div>
                                <div name="tags"/>
                                <ul>
                                    <li>Etat d'aujourd'hui: 
                                    <span style="color:green;" attrs="{'invisible':[('today_state','!=','l')]}"><b><field name="today_state" /></b></span>
                                    <span style="color:red;" attrs="{'invisible':[('today_state','!=','o')]}"><b><field name="today_state" /></b></span>
                                    <span style="color:black;" attrs="{'invisible':[('today_state','!=','r')]}"><b><field name="today_state" /></b></span>
                                    </li>
                                     <li>Date de Disponibilit√©: <b><field name="next_free_dtae" /></b></li>
                                     <field name="lst_price" invisible="1" />
                                </ul>
                                <button class="btn btn-info" type="object"  name="open_create_affectation" >Reserver</button>
                                <div name="tags"/>
                            </div>
                        </div>
        
              
        </xpath>
      </field>
    </record>

